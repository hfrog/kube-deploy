{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "kube-addon-manager",
    "namespace": "kube-system",
    "version": "v1"
  },
  "spec": {
    "hostNetwork": true,
    "containers": [
      {
        "name": "kube-addon-manager",
        "image": "gcr.io/google_containers/kube-addon-manager-ARCH:v6.4-beta.1",
        "env": [
          {
            "name": "KUBECTL_OPTS",
            "value": "--kubeconfig=K8S_KUBECONFIG_DIR/kubeconfig-addon-manager.yaml"
          }
        ],
        "resources": {
          "requests": {
            "cpu": "5m",
            "memory": "50Mi"
          }
        },
        "volumeMounts": [
          {
            "name": "data",
            "mountPath": "K8S_KUBESRV_DIR",
            "readOnly": true
          },
          {
            "name": "addons",
            "mountPath": "/etc/kubernetes/addons",
            "readOnly": true
          },
          {
            "name": "kubeconfig",
            "mountPath": "K8S_KUBECONFIG_DIR",
            "readOnly": true
          }
        ]
      }
    ],
    "volumes":[
      {
        "name": "data",
        "hostPath": {
          "path": "K8S_KUBESRV_DIR"
        }
      },
      {
        "name": "addons",
        "hostPath": {
          "path": "K8S_ADDONS_DIR"
        }
      },
      {
        "name": "kubeconfig",
        "hostPath": {
          "path": "K8S_KUBECONFIG_DIR"
        }
      }
    ]
  }
}
